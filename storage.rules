rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profile_images/{userId}/{allFiles=**} {
      // Permitir que el usuario autenticado pueda subir im√°genes a su propia carpeta
      allow write: if request.auth != null && request.auth.uid == userId;

      // Restringir el acceso a otros usuarios no autenticados
      allow read: if false;
    }
  }
}

